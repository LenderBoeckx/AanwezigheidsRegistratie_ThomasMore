@model Boekingssysteem.ViewModels.GrantPermissionsViewModel

@{
    ViewData["Title"] = "Grant Permission";
}

<form asp-action="GrantPermissions" asp-method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <select asp-for="GebruikerId" asp-items="Model.Gebruikers"></select>
    </div>
    <div class="form-group">
        <select asp-for="RolId" asp-items="Model.Rollen"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Aanpassen" class="btn btn-primary" />
    </div>
</form>
<a class="btn btn-primary mb-5 mt-5" asp-action="Index">Terug</a>